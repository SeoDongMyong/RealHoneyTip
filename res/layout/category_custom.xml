<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/category_mainImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/category_clock"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/custom_bnt1"
            android:drawableLeft="@drawable/clock"
            android:text="최신순"
            android:textSize="13dp" />

        <Button
            android:id="@+id/category_hot"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/custom_btn2"
            android:drawableLeft="@drawable/hot"
            android:text="인기순"
            android:textSize="13dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/category_linear_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>